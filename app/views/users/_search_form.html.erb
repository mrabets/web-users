<%= search_form_for @q do |f| %>
  <div class="row g-3">
    <div class="col">
      <%= f.label "Provider" %>
      <%= f.select :provider_cont, options_for_select(['Facebook', 'Github', 'Google']),
                   {}, {class: 'form-control'} %><br>
    </div>
    <div class="col">
      <%= f.label "Status" %>
      <%= f.select :blocked_at_null, options_for_select([['Active', 1], ['Block', 0]]),
                   {}, {class: 'form-control'} %><br>
    </div>
  </div>
  <%= f.submit "Search", class: "btn btn-primary" %>
  <%= link_to "Show All", users_path, class: "btn btn-success" %>
  <hr>


<% end %>